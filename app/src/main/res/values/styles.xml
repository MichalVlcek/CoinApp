<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasicButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:backgroundTint">@color/lightBlue</item>
        <item name="android:foregroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BasicEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="PrettyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:padding">8dp</item>
        <item name="android:backgroundTintMode">screen</item>
    </style>

    <style name="HeadingTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/big_text</item>
    </style>

    <style name="HeadingTextViewMuted" parent="HeadingTextView">
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="IntervalRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/radio_flat_selector</item>
        <item name="android:textColor">@drawable/radio_flat_text_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchViewWhiteText" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:searchIcon">@drawable/ic_search_white</item>
        <item name="android:searchHintIcon">@drawable/ic_search_white</item>
        <item name="android:closeIcon">@drawable/ic_close_white</item>
    </style>
</resources>