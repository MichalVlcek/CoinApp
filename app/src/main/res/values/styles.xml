<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasicButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:backgroundTint">@color/lightBlue</item>
        <item name="android:foregroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BasicEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="PrettyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:padding">8dp</item>
        <item name="android:backgroundTint">@color/background_color_light</item>
        <item name="android:backgroundTintMode">screen</item>
    </style>

    <style name="HeadingTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/big_text</item>
    </style>
</resources>